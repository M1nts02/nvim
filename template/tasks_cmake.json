{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CreateBuildDir (Release)",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "build/Release"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "cmakeRun (Release)",
      "type": "shell",
      "dependsOn": [
        "CreateBuildDir (Release)"
      ],
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Release",
        "../.."
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/Release"
      }
    },
    {
      "label": "Build (Release)",
      "type": "shell",
      "command": "make",
      "args": [],
      "dependsOn": [
        "cmakeRun (Release)"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/Release"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CreateBuildDir (Debug)",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "build/Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "cmakeRun (Debug)",
      "type": "shell",
      "dependsOn": [
        "CreateBuildDir (Debug)"
      ],
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        "../.."
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/Debug"
      }
    },
    {
      "label": "Build (Debug)",
      "type": "shell",
      "command": "make",
      "args": [],
      "dependsOn": [
        "cmakeRun (Debug)"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/Debug"
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
